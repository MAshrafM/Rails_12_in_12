<%= form_for [@post, @post.comments.build] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>