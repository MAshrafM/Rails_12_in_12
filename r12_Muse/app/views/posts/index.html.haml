#posts
  - @posts.each do |post|
    .post
      .post_image
        = link_to(image_tag post.image.url(:small)), post
      .post_content
        .title
          %h2= link_to post.title, post
        .data.clearfix
          %p.username
            Shared By
            = post.user.name
          %p.buttons
            #span
              %i.fa.fa-comments-o
              pluralize(post.comments.count, "Comment")
          %p
            %span
              %i.fa.fa-thumbs-o-up
                pluralize(post.get_likes.size, "Like")
