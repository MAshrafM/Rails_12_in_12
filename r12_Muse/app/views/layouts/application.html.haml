!!!
%html
%head
  %title Muse
  = csrf_meta_tags
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

%body
  %header
    .wrapper.clearfix
      #logo= link_to "Muse", root_path
      
      %nav
        - if user_signed_in?
          = link_to current_user.name, edit_user_registeration_path
          = link_to "Add New Muse", new_post_path, class: "button"
        - else
          = link_to "Sign in", new_user_session_path
          = link_to "Sign Up", new_user_registeration_path, class: "button"
          
  %p.notice= notice
  %p.alert= alert
  .wrapper
    = yield